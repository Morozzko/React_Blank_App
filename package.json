{
  "name": "npm.piece",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "frontend/*",
    "backend/*",
    "other/*",
    "libs/*",
    "packages/*"
  ],
  "scripts": {
    "build:libs": "turbo run build --filter=@npm.piece/constants & turbo run build --filter=@npm.piece/common && turbo run build --filter=@npm.piece/utils && turbo run build --filter=@npm.piece/ui-kit",
    "build": "turbo run build",
    "prestart": "yarn build:libs",
    "start": "turbo run dev --filter=app_auth & turbo run dev --filter=app_root",
    "test:watch": "turbo run test:watch",
    "format": "eslint --fix --ext .js,.jsx,.tsx,ts .",
    "mf": "npm.piece-connect-mf",
    "rmrf": "node deleteNodeModules.js",
    "update": "node ./packages/update-packages/bin/index.js && yarn"
  },
  "devDependencies": {
    "@npm.piece/eslint-config": "*",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.17"
}
